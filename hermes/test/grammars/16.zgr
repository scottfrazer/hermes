grammar {
  parser<ll1> {
    $object = :lbrace list($name_value_pair, :comma) :rbrace -> Object( attributes=$1 )
    $array = :lsquare list($value, :comma) :rsquare -> Array( items=$1 )
    $value = $object
    $value = $array
    $value = :string
    $value = :number
    $value = :true
    $value = :false
    $value = :null
    $name_value_pair = :string :colon $value -> NameValuePair( name=$0, value=$2 )
  }
}